{% comment %}
  Contact Page - Social Media Links
  Repeatable items with label and URL.
{% endcomment %}

<section class="container mx-auto px-4 py-12">
  {% if section.settings.title != blank %}
    <h2 class="text-2xl font-semibold mb-6">{{ section.settings.title }}</h2>
  {% endif %}

  <ul class="space-y-3">
    {% for block in section.blocks %}
      <li {{ block.shopify_attributes }}>
        <a
          class="underline text-black hover:text-gray-700"
          href="{{ block.settings.url }}"
          target="_blank"
          rel="noopener"
        >
          {{ block.settings.label | default: block.settings.url }}
        </a>
      </li>
    {% endfor %}
  </ul>
</section>

