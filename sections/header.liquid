<header class="flex flex-col bg-transparent absolute top-0 left-0 right-0 z-50 overflow-hidden" >
  <div class="w-screen overflow-hidden bg-primary py-2 whitespace-nowrap">
  <div class="ticker-wrap inline-block">
    <span class="ticker-item text-white text-md font-medium tracking-wide"
      >Class Is in Session &bull; Class Is in Session &bull; Class Is in Session
      &bull; Class Is in Session &bull; Class Is in Session &bull; Class Is in
      Session &bull; Class Is in Session &bull; Class Is in Session &bull;
      Class Is in Session &bull; Class Is in Session &bull;</span
    >
    <!-- Repeat the content to ensure smooth looping -->
    <span class="ticker-item text-white text-md font-medium tracking-wide"
      >Class Is in Session &bull; Class Is in Session &bull; Class Is in Session
      &bull; Class Is in Session &bull; Class Is in Session &bull; Class Is in
      Session &bull; Class Is in Session &bull; Class Is in Session &bull;
      Class Is in Session &bull; Class Is in Session &bull;</span
    >
  </div>
</div>
  <nav class="grid grid-cols-3 py-8 px-6 md:px-24 bg-transparent text-white w-full bg-gradient-to-b from-black/60 to-transparent ">
   <div class="header__menu hidden xl:flex items-center justify-start gap-6">
    {% for link in section.settings.menu.links %}
      <p class="font-semibold">

        {{ link.title | link_to: link.url }}
      </p>
    {% endfor %}
      </div>

  <div class="flex gap-6 items-center xl:hidden">
    {% render 'menu-icon' %}
    {% render 'search-icon' %}
  </div>


  <h2 class="header__title flex items-center justify-center">
    <a href="{{ routes.root_url }}">
      <img src="../assets//logo.png" alt="" class="invert-100">
    </a>
  </h2>

 

  <div class="flex items-center justify-end gap-4">
      {% render 'search-icon' , class: "hidden xl:block"%}
      {% render 'heart-icon', class: "hidden xl:block" %}
      {% render 'user-icon' %}
      <div>
        {% render 'cart-icon' %}
              {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}
        </div>
      </div>
  </nav>

</header>

{% stylesheet %}
  /* You might want to define this in your global CSS file or within a <style> tag */
.ticker-wrap {
  animation: ticker linear infinite;
  animation-duration: 40s; /* Adjust speed as needed */
  transform: translateX(0%); /* Start position */
}

@keyframes ticker {
  0% {
    transform: translateX(0%);
  }
  100% {
    /* Translate by -50% to perfectly loop when repeating the content once */
    transform: translateX(-50%);
  }
}

/* Optional: Add media queries for different speeds or column layouts if desired */
@media (max-width: 768px) {
  .ticker-wrap {
    animation-duration: 25s; /* Faster on smaller screens */
  }
}
{% endstylesheet %}



