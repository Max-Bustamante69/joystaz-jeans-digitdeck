              "value": "instagram",
              "label": "Instagram"
            },
            {
              "value": "linkedin",
              "label": "LinkedIn"
            },
            {
              "value": "tiktok",
              "label": "TikTok"
            },
            {
              "value": "youtube",
              "label": "YouTube"
            },
            {
              "value": "facebook",
              "label": "Facebook"
            },
            {
              "value": "pinterest",
              "label": "Pinterest"
            },
            {
              "value": "snapchat",
              "label": "Snapchat"
            }
