          "label": "Social Media URL"
        }
      ]
    },
    {
      "type": "trust_badge",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "image_picker",
          "id": "badge_image",
          "label": "Trust Badge Image",
          "info": "Upload trust badge image"
        },
        {
          "type": "url",
          "id": "badge_url",
          "label": "Trust Badge Link",
          "info": "Optional link for the trust badge"
        },
        {
          "type": "text",
          "id": "badge_alt",
          "label": "Alt Text",
          "default": "Trust Badge",
          "info": "Alternative text for accessibility"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        { "type": "social_media", "settings": { "platform": "x", "url": "" } },
        { "type": "social_media", "settings": { "platform": "instagram", "url": "" } },
        { "type": "social_media", "settings": { "platform": "linkedin", "url": "" } },
        { "type": "social_media", "settings": { "platform": "tiktok", "url": "" } },
        { "type": "social_media", "settings": { "platform": "youtube", "url": "" } }
      ]
    }
  ]
}
{% endschema %}
