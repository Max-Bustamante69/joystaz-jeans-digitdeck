{% comment %}
  Marquee Quote Section
  Features:
  - Infinite scrolling marquee animation
  - Multiple customizable quotes
  - Smooth continuous movement
  - Customizable colors and styling
  - Responsive design
{% endcomment %}

<div
  class="marquee-quote-section py-8"
  style="background-color: {{ section.settings.background_color | default: '#ffffff' }}; overflow: hidden;"
>
  <div class="marquee-container">
    <div class="marquee-content" style="
      color: {{ section.settings.text_color | default: '#1f2937' }};
      font-size: {{ section.settings.text_size | default: 1.2 }}rem;
    ">
      {% for block in section.blocks %}
        <span class="marquee-item">
          <span class="quote-icon">★</span>
          "{{ block.settings.quote_text }}"
        </span>
      {% endfor %}

      <!-- Duplicate content for seamless loop -->
      {% for block in section.blocks %}
        <span class="marquee-item">
          <span class="quote-icon">★</span>
          "{{ block.settings.quote_text }}"
        </span>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .marquee-quote-section {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .marquee-container {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;
  }

  .marquee-content {
    display: inline-flex;
    white-space: nowrap;
    animation: marquee {{ section.settings.animation_speed | default: 30 }}s linear infinite;
    will-change: transform;
  }

  .marquee-item {
    display: inline-flex;
    align-items: center;
    padding: 0 3rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .quote-icon {
    color: {{ section.settings.icon_color | default: '#3b82f6' }};
    margin-right: 0.8rem;
    font-size: 1.2em;
    flex-shrink: 0;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pause animation on hover */
  {% if section.settings.pause_on_hover %}
  .marquee-quote-section:hover .marquee-content {
    animation-play-state: paused;
  }
  {% endif %}

  /* Responsive text size adjustments */
  @media screen and (max-width: 1023px) {
    .marquee-content {
      font-size: calc({{ section.settings.text_size | default: 1.2 }}rem * 0.9) !important;
    }
    .marquee-item {
      padding: 0 2rem;
    }
  }

  @media screen and (max-width: 767px) {
    .marquee-content {
      font-size: calc({{ section.settings.text_size | default: 1.2 }}rem * 0.85) !important;
    }
    .marquee-item {
      padding: 0 1.5rem;
    }
    .quote-icon {
      margin-right: 0.5rem;
    }
  }

  @media screen and (max-width: 480px) {
    .marquee-content {
      font-size: calc({{ section.settings.text_size | default: 1.2 }}rem * 0.75) !important;
    }
    .marquee-item {
      padding: 0 1.2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Marquee Quotes",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Styling Options"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1f2937"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#3b82f6",
      "info": "Color for the star icons"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 0.8,
      "max": 2,
      "step": 0.1,
      "unit": "rem",
      "label": "Text Size",
      "default": 1.2,
      "info": "Base font size for the quotes"
    },
    {
      "type": "header",
      "content": "Animation Settings"
    },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "s",
      "label": "Animation Speed",
      "default": 30,
      "info": "Duration for one complete scroll cycle (lower = faster)"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on Hover",
      "default": true,
      "info": "Pause the animation when hovering over the section"
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "Quote",
      "settings": [
        {
          "type": "text",
          "id": "quote_text",
          "label": "Quote Text",
          "default": "Your customer testimonial here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Quotes",
      "category": "Content",
      "blocks": [
