    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "info": "Create a menu with primary links as column titles and secondary links as column content. Works like the header menu structure."
    }
