{% comment %}
  Cart Product Card Snippet - Clean Modern Design
  Features:
  - Clean, minimal design
  - Better spacing and typography
  - Simplified quantity controls
  - Action buttons (edit, wishlist, remove)
{% endcomment %}

<div class="cart-product-card bg-white  border-gray-100 lg:px-5 px-4">
  <div class="flex w-full gap-3">
    <!-- Product Image -->
    <div class="w-24 flex-shrink-0 aspect-[3/4]">
      <img
        :src="item.image"
        :alt="item.product_title"
        class="object-cover w-full h-full"
        width="96"
        height="128"
        loading="lazy"
      >
    </div>

    <!-- Product Details + Price/Qty -->
    <div class="min-w-0 flex-1 flex flex-col justify-between py-3">
      <!-- Top row: Title/variant left, Price right -->
      <div class="flex items-start justify-between gap-2">
        <div class="min-w-0 w-full">
          <h3 class="font-medium text-gray-900 text-sm leading-tight" x-text="item.product_title"></h3>
         
        </div>
        
        <div class="text-right pl-2">
          <div class="flex items-center justify-end space-x-2">
            <span class="font-semibold text-gray-900 text-sm" x-text="'$' + formatMoney(item.final_line_price)"></span>
            <span
              class="text-xs text-gray-400 line-through"
              x-show="item.original_line_price && item.original_line_price > item.final_line_price"
              x-text="'$' + formatMoney(item.original_line_price)"
            ></span>
          </div>
        </div>
      </div>

       <div class="mt-1 flex items-center justify-between gap-2">
            <div class="flex items-center gap-2 text-xs">
              <span class="font-semibold" x-text="(item.variant_title || '').split(' / ')[0]"></span>
              <span class="text-gray-500" x-text="(item.variant_title || '').split(' / ')[1]"></span>
            </div>
          </div>

      <!-- Second row: Qty left, wishlist+remove right -->
      <div class="mt-2">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <button
              @click="updateQuantity(item.key, item.quantity - 1)"
              :disabled="loading || item.quantity <= 1"
              class="w-6 h-6 flex items-center justify-center text-gray-400 hover:text-gray-600 disabled:opacity-30 disabled:cursor-not-allowed transition-colors"
              :title="item.quantity <= 1 ? 'Remove item' : 'Decrease quantity'"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
              </svg>
            </button>

            <span class="text-sm font-medium text-gray-900 min-w-[20px] text-center" x-text="item.quantity"></span>

            <button
              @click="updateQuantity(item.key, item.quantity + 1)"
              :disabled="loading"
              class="w-6 h-6 flex items-center justify-center text-gray-400 hover:text-gray-600 disabled:opacity-30 disabled:cursor-not-allowed transition-colors"
              title="Increase quantity"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </button>
          </div>
          <div class="flex gap-3 items-center">
            <button
              class="text-gray-400 hover:text-red-700 transition-colors"
              @click="toggleWishlistByHandle(normalizeHandleFromItem(item))"
              :title="isInWishlist(normalizeHandleFromItem(item)) ? 'Quitar de favoritos' : 'Agregar a favoritos'"
            >
              <span x-show="!isInWishlist(normalizeHandleFromItem(item))">
                {% render 'heart-icon', class: 'w-4 h-4', fill: 'none' %}
              </span>
              <span x-show="isInWishlist(normalizeHandleFromItem(item))">
                {% render 'heart-icon', class: 'w-4 h-4 text-red-700', fill: 'currentColor' %}
              </span>
            </button>
          <div class="bg-black/10 w-[1px] h-[12px]  "></div>
            <button
              class="text-gray-400 hover:text-red-700 transition-colors"
              @click="updateQuantity(item.key, 0)"
              :disabled="loading"
              title="Remove from cart"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Action Buttons removed; now integrated with row above -->
  </div>
</div>
