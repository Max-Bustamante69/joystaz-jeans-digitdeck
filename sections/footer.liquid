<footer class="w-full px-4 lg:space-y-10  lg:px-12 pt-10 pb-5  bg-primary text-white" x-data="{ openItem: null }">
  <div class="flex w-full flex-col lg:justify-between lg:flex-row ">
    <div class="flex flex-col gap-4 w-full">
      <div class="flex flex-col gap-8">
        <div class="lg:w-[385px]">
          <p class="body-sm font-semibold uppercase text-white/50 mb-4">NEWSLETTER</p>
          <form
            action="{{ routes.search_url }}"
            method="get"
            role="search"
            class="gap-2 flex flex-row items-end"
          >
            <input
              type="search"
              name="q"
              value="{{ search.terms | escape }}"
              placeholder="Tu correo"
              class="w-full border-b border-white/30 placeholder:text-white placeholder:body placeholder:font-semibold  pr-3 py-2 bg-transparent focus:outline-none transition-all duration-300 ease-in-out focus:border-white/80"
            >
            <input type="hidden" name="type" value="product">
            <button type="submit" class="h-9 px-6 bg-white text-black body font-semibold">Enviar</button>
          </form>
        </div>
        <!-- Social Media Section -->
        <div>
          <div class="flex gap-4">
            {% for block in section.blocks %}
              {% if block.type == 'social_media' and block.settings.url != blank %}
                <a
                  href="{{ block.settings.url }}"
                  target="_blank"
                  rel="noopener"
                  class="text-white hover:text-white/70 transition-colors"
                  {{ block.shopify_attributes }}
                >
                  {% if block.settings.custom_icon != blank %}
                    <!-- Custom uploaded icon -->
                    <img
                      src="{{ block.settings.custom_icon | image_url: width: 24 }}"
                      alt="{{ block.settings.platform | capitalize }}"
                      class="w-6 h-6 object-contain"
                      width="24"
                      height="24"
                      loading="lazy"
                    >
                  {% else %}
                    <!-- Default platform icons -->
                    {% case block.settings.platform %}
                      {% when 'x' %}
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
