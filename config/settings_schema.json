[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "primary_color",
        "default": "#3b2e10",
        "label": "Primary Color",
        "info": "Main brand color used throughout the theme"
      },
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Header Navigation",
    "settings": [
      {
        "type": "header",
        "content": "Scroll Behavior"
      },
      {
        "type": "range",
        "id": "header_scroll_threshold_default",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "vh",
        "label": "Default Scroll Threshold",
        "default": 95,
        "info": "Viewport height percentage for header background change (trigger at this % of screen height)"
      },
      {
        "type": "range",
        "id": "header_scroll_threshold_home",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "vh",
        "label": "Home Page Scroll Threshold",
        "default": 95,
        "info": "Scroll threshold specifically for the home page (as % of viewport height)"
      },
      {
        "type": "range",
        "id": "header_scroll_threshold_product",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "vh",
        "label": "Product Page Scroll Threshold",
        "default": 95,
        "info": "Scroll threshold specifically for product pages (as % of viewport height)"
      },
      {
        "type": "range",
        "id": "header_scroll_threshold_collection",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "vh",
        "label": "Collection Page Scroll Threshold",
        "default": 95,
        "info": "Scroll threshold specifically for collection pages (as % of viewport height)"
      },
      {
        "type": "range",
        "id": "header_scroll_threshold_page",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "vh",
        "label": "Static Page Scroll Threshold",
        "default": 95,
        "info": "Scroll threshold specifically for static pages (as % of viewport height)"
      }
    ]
  },
  {
    "name": "Search Drawer",
    "settings": [
      {
        "type": "header",
        "content": "Featured Tags"
      },
      {
        "type": "checkbox",
        "id": "search_show_featured_tags",
        "label": "Show Featured Tags",
        "default": true
      },
      {
        "type": "text",
        "id": "search_featured_tags_title",
        "label": "Featured Tags Title",
        "default": "Popular Categories"
      },
      {
        "type": "header",
        "content": "Search History"
      },
      {
        "type": "text",
        "id": "search_history_title",
        "label": "History Section Title",
        "default": "Recent Searches"
      },
      {
        "type": "text",
        "id": "search_clear_all_text",
        "label": "Clear All Button Text",
        "default": "Clear all"
      },
      {
        "type": "header",
        "content": "Search Results"
      },
      {
        "type": "text",
        "id": "search_view_all_text",
        "label": "View All Button Text",
        "default": "Ver todos"
      },
      {
        "type": "header",
        "content": "Category Grid"
      },
      {
        "type": "checkbox",
        "id": "search_show_category_grid",
        "label": "Show Category Grid",
        "default": true
      },
      {
        "type": "text",
        "id": "search_category_grid_title",
        "label": "Category Grid Title",
        "default": "Shop by Category"
      },
      {
        "type": "header",
        "content": "Product Carousel"
      },
      {
        "type": "checkbox",
        "id": "search_show_product_carousel",
        "label": "Show Product Carousel",
        "default": true
      },
      {
        "type": "text",
        "id": "search_product_carousel_title",
        "label": "Product Carousel Title",
        "default": "Featured Products"
      },
      {
        "type": "select",
        "id": "search_product_source",
        "label": "Product Source",
        "options": [
          {
            "value": "collection",
            "label": "Collection"
          },
          {
            "value": "tags",
            "label": "Product Tags"
          },
          {
            "value": "manual",
            "label": "Manual Selection"
          }
        ],
        "default": "collection"
      },
      {
        "type": "collection",
        "id": "search_collection",
        "label": "Collection",
        "info": "Select products from this collection"
      },
      {
        "type": "text",
        "id": "search_product_tags",
        "label": "Product Tags",
        "info": "Comma-separated tags (e.g., 'best-seller,new')"
      },
      {
        "type": "product_list",
        "id": "search_products",
        "label": "Manual Product Selection"
      },
      {
        "type": "header",
        "content": "Featured Collections (Tags)"
      },
      {
        "type": "collection_list",
        "id": "search_featured_collections",
        "label": "Select Collections to Show as Tags",
        "info": "Choose which collections will appear as clickable tags in the search drawer",
        "limit": 10
      },
      {
        "type": "header",
        "content": "Category Carousel Collections"
      },
      {
        "type": "collection_list",
        "id": "search_category_collections",
        "label": "Select Collections for Category Carousel",
        "info": "Choose which collections will appear in the category carousel section",
        "limit": 8
      }
    ]
  }
]
