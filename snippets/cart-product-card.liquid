{% comment %}
  Cart Product Card Snippet - Clean Modern Design
  Features:
  - Clean, minimal design
  - Better spacing and typography
  - Simplified quantity controls
  - Action buttons (edit, wishlist, remove)
{% endcomment %}

<div class="cart-product-card bg-white border-b border-gray-100 last:border-b-0">
  <div class="flex gap-4 p-6">
    <!-- Product Image -->
    <div class="flex-shrink-0">
      <img
        :src="item.image"
        :alt="item.product_title"
        class="w-16 h-16 object-cover rounded-lg"
        width="64"
        height="64"
        loading="lazy"
      >
    </div>

    <!-- Product Details -->
    <div class="flex-1 min-w-0">
      <!-- Product Title -->
      <h3 class="font-medium text-gray-900 text-sm leading-tight mb-1" x-text="item.product_title"></h3>

      <!-- Variant Details -->
      <p class="text-gray-500 text-xs mb-3" x-text="item.variant_title || ''"></p>

      <!-- Price and Quantity Row -->
      <div class="flex items-center justify-between">
        <!-- Price -->
        <div class="flex items-center space-x-2">
          <span class="font-semibold text-gray-900 text-sm" x-text="'$' + formatMoney(item.final_line_price)"></span>
          <span
            class="text-xs text-gray-400 line-through"
            x-show="item.original_line_price && item.original_line_price > item.final_line_price"
            x-text="'$' + formatMoney(item.original_line_price)"
          ></span>
        </div>

        <!-- Quantity Controls -->
        <div class="flex items-center gap-3">
          <button
            @click="updateQuantity(item.key, item.quantity - 1)"
            :disabled="loading || item.quantity <= 1"
            class="w-6 h-6 flex items-center justify-center text-gray-400 hover:text-gray-600 disabled:opacity-30 disabled:cursor-not-allowed transition-colors"
            :title="item.quantity <= 1 ? 'Remove item' : 'Decrease quantity'"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
            </svg>
          </button>

          <span class="text-sm font-medium text-gray-900 min-w-[20px] text-center" x-text="item.quantity"></span>

          <button
            @click="updateQuantity(item.key, item.quantity + 1)"
            :disabled="loading"
            class="w-6 h-6 flex items-center justify-center text-gray-400 hover:text-gray-600 disabled:opacity-30 disabled:cursor-not-allowed transition-colors"
            title="Increase quantity"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col items-end gap-2">
      <!-- Edit Button -->
      <button
        class="text-gray-400 hover:text-gray-600 transition-colors"
        @click="editItem(item)"
        title="Edit item"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      </button>

      <!-- Wishlist Button -->
      <button
        class="text-gray-400 hover:text-red-800 transition-colors"
        @click="toggleWishlist(item.product_id)"
        title="Add to wishlist"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
      </button>

      <!-- Remove Button -->
      <button
        class="text-gray-400 hover:text-red-800 transition-colors"
        @click="updateQuantity(item.key, 0)"
        :disabled="loading"
        title="Remove from cart"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
</div>
