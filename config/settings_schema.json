[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Cart Settings",
    "settings": [
      {
        "type": "header",
        "content": "Free Shipping"
      },
      {
        "type": "range",
        "id": "free_shipping_threshold",
        "min": 0,
        "max": 1000,
        "step": 10,
        "unit": "USD",
        "label": "Free Shipping Threshold",
        "info": "Amount in dollars (e.g., 150 = $150.00). Set to 0 to disable free shipping progress bar.",
        "default": 150
      },
      {
        "type": "header",
        "content": "Cart Product Carousel"
      },
      {
        "type": "checkbox",
        "id": "cart_show_product_carousel",
        "label": "Show Product Carousel in Cart",
        "default": true
      },
      {
        "type": "range",
        "id": "cart_carousel_max_products",
        "min": 4,
        "max": 20,
        "step": 1,
        "label": "Maximum Products in Cart Carousel",
        "default": 8
      },
      {
        "type": "collection_list",
        "id": "cart_fallback_collections",
        "label": "Fallback Collections for Empty Cart",
        "info": "Collections to show in cart carousel when cart is empty",
        "limit": 5
      }
    ]
  },
  {
    "name": "Search Drawer",
    "settings": [
      {
        "type": "header",
        "content": "Featured Tags"
      },
      {
        "type": "checkbox",
        "id": "search_show_featured_tags",
        "label": "Show Featured Tags",
        "default": true
      },
      {
        "type": "text",
        "id": "search_featured_tags_title",
        "label": "Featured Tags Title",
        "default": "Popular Categories"
      },
      {
        "type": "header",
        "content": "Search History"
      },
      {
        "type": "text",
        "id": "search_history_title",
        "label": "History Section Title",
        "default": "Recent Searches"
      },
      {
        "type": "header",
        "content": "Category Grid"
      },
      {
        "type": "checkbox",
        "id": "search_show_category_grid",
        "label": "Show Category Grid",
        "default": true
      },
      {
        "type": "text",
        "id": "search_category_grid_title",
        "label": "Category Grid Title",
        "default": "Shop by Category"
      },
      {
        "type": "header",
        "content": "Product Carousel"
      },
      {
        "type": "checkbox",
        "id": "search_show_product_carousel",
        "label": "Show Product Carousel",
        "default": true
      },
      {
        "type": "text",
        "id": "search_product_carousel_title",
        "label": "Product Carousel Title",
        "default": "Featured Products"
      },
      {
        "type": "select",
        "id": "search_product_source",
        "label": "Product Source",
        "options": [
          {
            "value": "collection",
            "label": "Collection"
          },
          {
            "value": "tags",
            "label": "Product Tags"
          },
          {
            "value": "manual",
            "label": "Manual Selection"
          }
        ],
        "default": "collection"
      },
      {
        "type": "collection",
        "id": "search_collection",
        "label": "Collection",
        "info": "Select products from this collection"
      },
      {
        "type": "text",
        "id": "search_product_tags",
        "label": "Product Tags",
        "info": "Comma-separated tags (e.g., 'best-seller,new')"
      },
      {
        "type": "product_list",
        "id": "search_products",
        "label": "Manual Product Selection"
      },
      {
        "type": "header",
        "content": "Featured Collections (Tags)"
      },
      {
        "type": "collection_list",
        "id": "search_featured_collections",
        "label": "Select Collections to Show as Tags",
        "info": "Choose which collections will appear as clickable tags in the search drawer",
        "limit": 10
      },
      {
        "type": "header",
        "content": "Category Carousel Collections"
      },
      {
        "type": "collection_list",
        "id": "search_category_collections",
        "label": "Select Collections for Category Carousel",
        "info": "Choose which collections will appear in the category carousel section",
        "limit": 8
      }
    ]
  }
]
